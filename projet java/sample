public class Point { double x, y; public Point(double x, double y) { this.x = x; this.y = y; } public void rotateAround(Point center, double angle) { double tempx = center.x + (Math.cos(Math.toRadians(angle)) * (x - center.x) - Math.sin(Math.toRadians(angle)) * (y - center.y)); double tempy = center.y + (Math.sin(Math.toRadians(angle)) * (x - center.x) + Math.cos(Math.toRadians(angle)) * (y - center.y)); x = tempx; y = tempy; } public String toString() { return "Point { X = " + String.valueOf(x) + ", Y = " + String.valueOf(y) + " }"; } }